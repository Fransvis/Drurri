<%- include ('../partials/header') %>

<div class='pride-register'>
  <div class='container'>
    <img class='img-fluid' src='https://cdn.pixabay.com/photo/2018/08/23/17/01/batman-3626211__340.jpg'>
    <div class='img-overlay'><p>Pride</p></div>
    <form>
      <div class='first-form'>
        <div class='business-name'>
          <h4>Business name</h4>
            <input placeholder='Your business name'>
        </div>
        <div class='business-type'>
        <h4>Industry</h4>
          <input placeholder='Industry'>
        </div>
      </div>
      <div class='first-form'>
        <div class='business-name'>
          <h4>Email</h4>
            <input placeholder='Email'>
        </div>
        <div class='business-type'>
          <h4>Contact</h4>
          <input placeholder='Contact'>
        </div>
      </div>
      <div class='first-form'>
        <div class='business-name'>
          <h4>Business Address</h4>
            <input placeholder='Address'>
        </div>
        <div class='business-type'>
          <h4>More Info</h4>
          <input placeholder='More Info'>
        </div>
      </div>
      <div class='payment-method'>
        <h3>Payment Method</h3>
          <div class='radio'>
            <input class='checkbox' type='radio'> 
            <p>Visa</p>
            <input id='card-owner' placeholder='name on card'>
          </div>
          <div class='radio'>
            <input class='radio' type='radio'> 
            <p>MasterCard</p>
            <input id='card-number' placeholder='card number'>
          </div>
          <div class='radio'>
            <input class='radio' type='radio'> 
            <p>Paypal</p>
            <input id='expiry-date' placeholder='expiry-date'>
          </div>
          <div class='radio'>
            <input class='radio' type='radio'> 
            <p>Snapscan</p>
            <input id='security-number' placeholder='cvv'>
          </div>
      </div>
    </form>
  </div>
</div>

<%- include ('../partials/footer') %>