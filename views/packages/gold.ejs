<%- include ('../partials/header') %>

<div class='pride-register'>


<form action='/business/gold' method='post'>
  <div class='prideRegisterContent'>
    <div class='prideHeader'>
      <h3>Sign Up for Gold package</h3>
    </div>
    <div class='prideInputs'>
      <input class='prideInput' type="text" name='businessName' placeholder='Business Name'>
      <input class='prideInput' type="text" name='businessIndustry' placeholder='Industry'>
    </div>
    <div class='prideInputs'>
      <input class='prideInput' type="text" name='businessAddress' placeholder='Business Address'>
      <input class='prideInput' type="text" name='businessContact' placeholder='Contact'>
    </div>
    <div class='prideInputs'>
      <input class='prideInput' type="text" name='username' placeholder='Email'>
      <input class='prideInput' type="password" name='password' placeholder='Password'>
    </div>
    <div class='prideInputs'>
      <button class='btn btn-light btn-sm' id='prideSignUpButton'>Sign Up!</button>
    </div>
  </div>
</form>

</div>

<%- include ('../partials/footer') %>