<div class='addProject'>


  <form action="/freelancer/<%= freelancer._id %>/profile/addProject" method="POST">
    <div class='addProjectContent'>
      <h3 id='addProjectHeader'>Create a new Project</h3>
        <div class='addProjectInputs'>
          <input class='addProjectInput' type='text' name='project[title]' placeholder="Project title">
          <input class='addProjectInput' type='text' name='project[date]' placeholder="Date">
