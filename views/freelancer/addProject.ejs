        <div class='addProjectInputs'>
          <label for="files"></label>
          <input class='addProjectInput' type='file' id='inpFile' name='project[image]'>
          <div class="image-preview" id='imagePreview'>
            <img src="" alt="image-preview" class="image-preview__image">
            <span class="image-preview__default-text">Image preview</span>
          </div>
          <!-- <input class='addProjectInput' type='text' name='project[image1]' placeholder="image"> -->
          <!-- <input class='addProjectInput' type='text' name='project[location]' placeholder="location"> -->
        </div>
        <div class='addProjectInputs'>
        <button class='btn btn-light btn-sm' id='freelancerSignUpButton'>Create!</button>
        </div>
    </div>
  </form> 
  
  </div>

